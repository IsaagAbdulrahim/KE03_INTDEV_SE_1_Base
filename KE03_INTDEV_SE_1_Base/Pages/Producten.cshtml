@page
@model KE03_INTDEV_SE_1_Base.Pages.ProductenModel
@{
    ViewData["Title"] = "Producten";
}

<h1 class="text-center my-4">Onze Mechanische Producten</h1>

<div class="row">
    @foreach (var product in Model.Producten)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img src="~/images/@product.Afbeelding" class="card-img-top" alt="@product.Name" style="height: 350px; object-fit: cover;" />
                <div class="card-body text-center">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">€ @product.Price</p>
                    <form method="post" asp-page-handler="Toevoegen">
                        <input type="hidden" name="id" value="@product.Id" />
                        <button type="submit" class="btn btn-success">Toevoegen</button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

